extends layout 

block content 
  h1= title 

  form(method='POST' action='')
    .form-group 
      label(for='class_name') Class:
      input#class_name.form-control(type='text' placeholder='Create a class that does not exist' name='class_name' value=(undefined===type ? '' : type.name))
    button.btn.btn-primary(type='submit') Submit 

  if errors 
    div.mt-2
      ul
        for error in errors 
          li!= error.msg